---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="ddev-tools">
  <style>
    .home {
      max-width: 720px;
    }
  
    .tagline {
      color: var(--text-muted);
      margin-bottom: 32px;
      font-size: 15px;
    }
  
    .tagline span {
      color: var(--text-main);
    }
  
    .tools {
      display: grid;
      grid-template-columns: 1fr;
      gap: 12px;
    }
  
    .tool {
      display: block;
      padding: 14px 16px;
      border: 1px solid var(--border);
      border-radius: 8px;
      background: var(--bg-panel);
      text-decoration: none;
      color: var(--text-main);
    }
  
    .tool:hover {
      border-color: var(--accent);
    }
  
    .tool h3 {
      margin: 0 0 4px;
      font-size: 16px;
    }
  
    .tool p {
      margin: 0;
      font-size: 13px;
      color: var(--text-muted);
    }
  
    .hint {
      margin-top: 32px;
      font-size: 12px;
      color: var(--text-muted);
    }
  </style>
  
  <section class="home">
    <h1>ddev-tools</h1>

    <p class="tagline">
      Local developer utilities.<br />
      <span>No cloud. No tracking. Just tools.</span>
    </p>

    <div class="tools">
      <a class="tool" href="/json">
        <h3>JSON Formatter</h3>
        <p>Format & validate JSON instantly.</p>
      </a>

      <a class="tool" href="/base64">
        <h3>Base64 Encode / Decode</h3>
        <p>Encode or decode Base64 strings.</p>
      </a>

      <a class="tool" href="/url">
        <h3>URL Encode / Decode</h3>
        <p>Safely encode or decode URL components.</p>
      </a>
    </div>

    <p class="hint">
      Tip: bookmark this page or run it locally via CLI.
    </p>
  </section>
</BaseLayout>
