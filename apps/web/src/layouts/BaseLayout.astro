---
const { title = 'ddev-tools' } = Astro.props;

const path = Astro.url.pathname;

function isActive(href: string) {
  if (href === '/' && path === '/') return true;
  return path.startsWith(href) && href !== '/';
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      :root {
        --bg-main: #0f0f0f;
        --bg-panel: #151515;
        --bg-input: #1e1e1e;
        --bg-hover: #222;
        --bg-active: #2a2a2a;

        --text-main: #eaeaea;
        --text-muted: #9a9a9a;
        --accent: #4f8cff;
        --border: #2a2a2a;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        display: flex;
        min-height: 100vh;
        background: var(--bg-main);
        color: var(--text-main);
      }

      aside {
        width: 220px;
        background: var(--bg-panel);
        padding: 20px 16px;
        box-sizing: border-box;
        border-right: 1px solid var(--border);
      }

      .brand {
        margin: 0 0 16px;
        font-size: 18px;
      }

      .brand a {
        color: var(--text-main);
        text-decoration: none;
      }

      main {
        flex: 1;
        padding: 32px;
        display: flex;
        flex-direction: column;
      }

      h1 {
        margin-top: 0;
        margin-bottom: 16px;
      }

      nav a {
        display: block;
        padding: 8px 10px;
        margin-bottom: 4px;
        color: var(--text-muted);
        text-decoration: none;
        border-radius: 6px;
      }

      nav a:hover {
        background: var(--bg-hover);
        color: var(--text-main);
      }

      nav a.active {
        background: var(--bg-active);
        color: var(--text-main);
        font-weight: 600;
      }

      footer {
        margin-top: auto;
        padding-top: 32px;
        font-size: 12px;
        color: var(--text-muted);
      }

      /* global styles */
      :global(.tool-grid) {
        display: grid;
        grid-template-columns: 1fr 160px 1fr;
        gap: 24px;
        align-items: stretch;
      }

      :global(.tool-panel) {
        display: flex;
        flex-direction: column;
      }

      :global(.tool-panel textarea),
      :global(.tool-panel pre) {
        flex: 1;
        min-height: 360px;
      }

      :global(.tool-actions) {
        position: relative;
        padding-top: 32px;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 12px;
      }

      :global(.tool-actions button) {
        width: auto;
        min-width: 100px;
        padding: 8px 14px;
      }

      :global(.tool-actions)::before {
        content: '';
        position: absolute;
        top: 20%;
        bottom: 20%;
        left: 50%;
        transform: translateX(-50%);
        width: 1px;
        background: var(--border);
        opacity: 0.35;

        pointer-events: none
      }

      :global(.btn-action) {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;

        min-width: 120px;
        height: 40px;
        padding: 0 16px;

        background: linear-gradient(
          to bottom,
          #262626,
          #1c1c1c
        );

        color: #e6e6e6;
        font-size: 14px;
        font-weight: 500;

        border-radius: 8px;

        border: 1px solid #141414;

        box-shadow:
          inset 0 1px 0 rgba(255, 255, 255, 0.04),
          0 2px 4px rgba(0, 0, 0, 0.6);

        cursor: pointer;
        user-select: none;

        transition:
          background 0.15s ease,
          box-shadow 0.15s ease,
          transform 0.08s ease;

        letter-spacing: 0.2px;

        text-shadow: 0 1px 0 rgba(0, 0, 0, 0.8);
      }

      :global(.btn-action:hover) {
        background: linear-gradient(
          to bottom,
          #2b2b2b,
          #202020
        );

        box-shadow:
          inset 0 1px 0 rgba(255, 255, 255, 0.05),
          0 3px 6px rgba(0, 0, 0, 0.7);
      }

      :global(.btn-action::after) {
        content: '';
        width: 0;
        height: 0;

        border-top: 4px solid transparent;
        border-bottom: 4px solid transparent;
        border-left: 6px solid currentColor;

        margin-left: 4px;
        transform: translateY(0.5px);
      }

      :global(.btn-action:active) {
        transform: translateY(1px);

        box-shadow:
          inset 0 2px 4px rgba(0, 0, 0, 0.7);
      }

      :global(.btn-action:disabled) {
        opacity: 0.4;
        cursor: not-allowed;
      }

      :global(.btn-action span) {
        .btn-action span
      }

    </style>
  </head>

  <body>
    <aside>
      <h2 class="brand">
        <a href="/">ddev-tools</a>
      </h2>
      <nav>
        <a href="/json" class={isActive('/json') ? 'active' : ''}>JSON Formatter</a>
        <a href="/base64" class={isActive('/base64') ? 'active' : ''}>Base64</a>
        <a href="/url" class={isActive('/url') ? 'active' : ''}>URL Encode</a>
      </nav>
    </aside>

    <main>
      <slot />
      <footer>
        <p>Local developer tools Â· static</p>
      </footer>
    </main>
  </body>
</html>
