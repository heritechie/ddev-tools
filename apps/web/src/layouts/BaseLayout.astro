---
const { title = 'ddev-tools' } = Astro.props;

const path = Astro.url.pathname;

function isActive(href: string) {
  if (href === '/' && path === '/') return true;
  return path.startsWith(href) && href !== '/';
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      :root {
        --bg-main: #0f0f0f;
        --bg-panel: #151515;
        --bg-input: #1e1e1e;
        --bg-hover: #222;
        --bg-active: #2a2a2a;

        --text-main: #eaeaea;
        --text-muted: #9a9a9a;
        --accent: #4f8cff;
        --border: #2a2a2a;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        display: flex;
        min-height: 100vh;
        background: var(--bg-main);
        color: var(--text-main);
      }

      aside {
        width: 220px;
        background: var(--bg-panel);
        padding: 20px 16px;
        box-sizing: border-box;
        border-right: 1px solid var(--border);
      }

      .brand {
        margin: 0 0 16px;
        font-size: 18px;
      }

      .brand a {
        color: var(--text-main);
        text-decoration: none;
      }

      main {
        flex: 1;
        padding: 32px;
        display: flex;
        flex-direction: column;
      }

      h1 {
        margin-top: 0;
        margin-bottom: 16px;
      }

      nav a {
        display: block;
        padding: 8px 10px;
        margin-bottom: 4px;
        color: var(--text-muted);
        text-decoration: none;
        border-radius: 6px;
      }

      nav a:hover {
        background: var(--bg-hover);
        color: var(--text-main);
      }

      nav a.active {
        background: var(--bg-active);
        color: var(--text-main);
        font-weight: 600;
      }

      footer {
        margin-top: auto;
        padding-top: 32px;
        font-size: 12px;
        color: var(--text-muted);
      }

      /* Content layout */
      :global(.tool-grid) {
        display: grid;
        grid-template-columns: 1fr 160px 1fr;
        gap: 24px;
        align-items: stretch;
      }

      :global(.tool-panel) {
        display: flex;
        flex-direction: column;
      }

      :global(.tool-panel textarea),
      :global(.tool-panel pre) {
        flex: 1;
        min-height: 360px;
      }

      :global(.tool-actions) {
        padding-top: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        pointer-events: none;
      }

      :global(.tool-actions button) {
        pointer-events: auto;
        width: auto;
        min-width: 100px;
        padding: 8px 14px;
      }

      :global(.tool-actions)::before {
        content: '';
        position: absolute;
        width: 1px;
        height: 60%;
        background: var(--border);
        opacity: 0.4;
      }

    </style>
  </head>

  <body>
    <aside>
      <h2 class="brand">
        <a href="/">ddev-tools</a>
      </h2>
      <nav>
        <a href="/json" class={isActive('/json') ? 'active' : ''}>JSON Formatter</a>
        <a href="/base64" class={isActive('/base64') ? 'active' : ''}>Base64</a>
        <a href="/url" class={isActive('/url') ? 'active' : ''}>URL Encode</a>
      </nav>
    </aside>

    <main>
      <slot />
      <footer>
        <p>Local developer tools Â· static</p>
      </footer>
    </main>
  </body>
</html>
