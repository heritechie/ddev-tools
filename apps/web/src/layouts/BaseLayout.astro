---
const { title = 'ddev-tools' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        display: flex;
        min-height: 100vh;
        background: #0f0f0f;
        color: #eaeaea;
      }

      aside {
        width: 220px;
        background: #151515;
        padding: 16px;
        box-sizing: border-box;
      }

      main {
        flex: 1;
        padding: 24px;
      }

      h1 {
        margin-top: 0;
      }

      nav a {
        display: block;
        padding: 8px 10px;
        margin-bottom: 4px;
        color: #ccc;
        text-decoration: none;
        border-radius: 4px;
      }

      nav a:hover {
        background: #222;
        color: #fff;
      }

      nav a.active {
        background: #333;
        color: #fff;
        font-weight: 600;
      }

      footer {
        margin-top: 40px;
        font-size: 12px;
        color: #777;
      }
    </style>
  </head>

  <body>
    <aside>
      <h2>ddev-tools</h2>
      <nav>
        <a href="/json">JSON Formatter</a>
        <a href="/base64">Base64</a>
        <a href="/url">URL Encode</a>
      </nav>
    </aside>

    <main>
      <slot />
      <footer>
        <p>Local developer tools Â· static</p>
      </footer>
    </main>
  </body>
</html>
